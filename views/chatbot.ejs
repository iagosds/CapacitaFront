<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">
            <h2>Chatbot</h2>
        </div>
        <div class="chat-history" id="chatHistory">
            <!-- As mensagens serÃ£o exibidas aqui -->
        </div>
        <div class="chat-input">
            <textarea id="userInput" placeholder="Digite sua mensagem..."></textarea>
            <button id="sendMessage" onclick="sendMessage()">Enviar</button>
            <label class="media-upload" for="fileInput">
                <input type="file" id="fileInput" style="display: none;" />
                <span>ðŸ“Ž</span>
            </label>
        </div>
    </div>

    <script>
        const chatHistory = document.getElementById('chatHistory');
        
        // FunÃ§Ã£o para enviar mensagens
        function sendMessage() {
            const userInput = document.getElementById('userInput').value;
            if (userInput.trim() === '') return; // NÃ£o envia se a mensagem for vazia
            
            // Exibe a mensagem do usuÃ¡rio no chat
            const userMessage = `<div class="message user-message">${userInput}</div>`;
            chatHistory.innerHTML += userMessage;

            // Limpa o campo de entrada de texto
            document.getElementById('userInput').value = '';

            // Simula a resposta do chatbot
            setTimeout(() => {
                const botMessage = `<div class="message bot-message">Resposta automÃ¡tica do chatbot</div>`;
                chatHistory.innerHTML += botMessage;
                chatHistory.scrollTop = chatHistory.scrollHeight; // Rola para a Ãºltima mensagem
            }, 1000);

            // Rola para a Ãºltima mensagem
            chatHistory.scrollTop = chatHistory.scrollHeight;
        }

        // FunÃ§Ã£o para lidar com o envio de arquivos
        document.getElementById('fileInput').addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                const fileMessage = `<div class="message file-message">ðŸ“Ž Arquivo enviado: ${file.name}</div>`;
                chatHistory.innerHTML += fileMessage;
                chatHistory.scrollTop = chatHistory.scrollHeight;
            }
        });
    </script>
</body>
</html>

